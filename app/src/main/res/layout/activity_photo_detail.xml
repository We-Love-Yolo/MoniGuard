<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/goback3"
            android:clickable="true"
            android:onClick="toBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/more3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/main_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/constraint"
        android:background="@drawable/photo_circle_background"
        android:src="@drawable/photo" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/main_photo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="信息"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/bar_text"/>

        <TextView
            android:id="@+id/date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXXX/XX/XX 星期X XX:XX:XX"
            android:textSize="16sp"
            android:textColor="@color/bar_text"/>

        <TextView
            android:id="@+id/img_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IMG……"
            android:textSize="16sp"
            android:textColor="#989898"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人物"
                android:textSize="20sp"
                android:textColor="@color/bar_text"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/stranger_photo"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/perfect_circle_background"/>

            <TextView
                android:id="@+id/stranger_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="陌生人X"
                android:textSize="16sp"
                android:textColor="@color/bar_text"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备"
                android:textSize="20sp"
                android:textColor="@color/bar_text"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/device_photo"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/img_camera"
                android:background="@drawable/perfect_circle_background"/>

            <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="阳台"
                android:textSize="16sp"
                android:textColor="@color/bar_text"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>