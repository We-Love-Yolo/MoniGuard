<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/monitor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="门禁"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="家1"
        android:textColor="#4F4F4F"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/goback"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/goback3"
        android:clickable="true"
        android:onClick="gotoHomePage"
        android:contentDescription="返回主页"/>

    <ImageView
        android:id="@+id/more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/more2" />

    <VideoView
        android:id="@+id/view"
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/rounded_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/roundedRectangle"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="@id/roundedRectangle"
        app:layout_constraintTop_toTopOf="@id/roundedRectangle"
        app:srcCompat="@drawable/fullscreen2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toStartOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="@id/roundedRectangle"
        app:srcCompat="@drawable/shotcut" />

    <ImageView
        android:id="@+id/voice"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/roundedRectangle"
        app:layout_constraintTop_toTopOf="@id/roundedRectangle"
        app:srcCompat="@drawable/voice" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截图相册"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="450dp" />

    <!-- ImageView -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/right"
        app:layout_constraintTop_toTopOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:onClick="goto_album"
        android:contentDescription="返回相册"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="500dp"
        android:src="@drawable/fake_blacklist1" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        android:layout_marginStart="90dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/fake_blacklist1" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        android:layout_marginStart="90dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/fake_blacklist1" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        android:layout_marginStart="90dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/fake_blacklist1" />



    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        android:layout_marginStart="0dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/fake_blacklist1" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        android:layout_marginStart="90dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/fake_blacklist1" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="90dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        android:src="@drawable/fake_blacklist1" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        app:layout_constraintStart_toStartOf="@+id/imageView12"
        android:layout_marginStart="90dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/fake_blacklist1" />
</androidx.constraintlayout.widget.ConstraintLayout>